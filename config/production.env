# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false

# Application Settings
APP_NAME=FastAPI E-commerce API
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Settings (PostgreSQL for production)
DATABASE_URL=postgresql://user:password@localhost/ecommerce
DATABASE_ECHO=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings (Configure for your frontend domains)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging Settings
LOG_LEVEL=INFO

# Production Features
ENABLE_DOCS=false
ENABLE_REDOC=false

# Security Settings
SECURE_COOKIES=true
HTTPS_ONLY=true
